{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
        ],
        "target": "es2022",
        "lib": ["ES2016", "ES2021", "ES2022", "ESNext"],
        "module": "commonjs",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "outDir": "./dist", 
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true, 
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}